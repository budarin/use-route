{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",

        "target": "ES2021",
        "module": "ESNext",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "allowJs": false,

        /* Строгий режим */
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "useUnknownInCatchVariables": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,

        /* Модули и импорты */
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true,

        /* Для пакета/библиотеки */
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "emitDeclarationOnly": false,
        "stripInternal": true,

        /* Пути при желании (пример) */
        "baseUrl": ".",
        "paths": {
            "@budarin/use-router": ["src/index.ts"],
            "@budarin/use-router/*": ["src/*"]
        }
    },
    "include": ["src", "samples"],
    "exclude": ["dist", "node_modules"]
}
